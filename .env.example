# =====================================================
# Database Connections (PostgreSQL)
# =====================================================

# Auth Service
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_pass

# User Service
USER_DB_HOST=localhost
USER_DB_PORT=5433
USER_DB_NAME=user_db
USER_DB_USER=user_user
USER_DB_PASSWORD=user_pass

# Property Management Service
PROPERTY_DB_HOST=localhost
PROPERTY_DB_PORT=5434
PROPERTY_DB_NAME=property_db
PROPERTY_DB_USER=property_user
PROPERTY_DB_PASSWORD=property_pass

# Payment Service
PAYMENT_DB_HOST=localhost
PAYMENT_DB_PORT=5435
PAYMENT_DB_NAME=payment_db
PAYMENT_DB_USER=payment_user
PAYMENT_DB_PASSWORD=payment_pass

# Notification Service
NOTIFICATION_DB_HOST=localhost
NOTIFICATION_DB_PORT=5436
NOTIFICATION_DB_NAME=notification_db
NOTIFICATION_DB_USER=notification_user
NOTIFICATION_DB_PASSWORD=notification_pass

# Search Service
SEARCH_DB_HOST=localhost
SEARCH_DB_PORT=5437
SEARCH_DB_NAME=search_db
SEARCH_DB_USER=search_user
SEARCH_DB_PASSWORD=search_pass

# =====================================================
# RabbitMQ (Event Bus)
# =====================================================

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=booking
RABBITMQ_PASSWORD=booking123
RABBITMQ_VHOST=/
RABBITMQ_MANAGEMENT_PORT=15672

# =====================================================
# Redis (Cache & Sessions)
# =====================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Redis Database por Serviço (0-15 disponíveis)
# Uma instância Redis com namespaces lógicos separados
REDIS_AUTH_DB=0           # Auth Service (refresh tokens, sessions)
REDIS_USER_DB=1           # User Service (cache de perfis, rate limiting)
REDIS_PROPERTY_DB=2       # Property Management (cache listings, availability temp)
REDIS_PAYMENT_DB=3        # Payment Service (idempotência, deduplicação)
REDIS_SEARCH_DB=4         # Search Service (cache de buscas populares)
REDIS_NOTIFICATION_DB=5   # Notification Service (queue de emails)

# =====================================================
# Elasticsearch (Search Service)
# =====================================================

ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_NODE=http://localhost:9200

# =====================================================
# Kong (API Gateway)
# =====================================================

KONG_PROXY_URL=http://localhost:8000
KONG_ADMIN_URL=http://localhost:8001

# =====================================================
# JWT Authentication (Auth Service)
# =====================================================

JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# RSA Keys (para RS256)
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem

# =====================================================
# Payment Gateway (Payment Service)
# =====================================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Mercado Pago (alternativa)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# =====================================================
# Email Service (Notification Service)
# =====================================================

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourbookingplatform.com
SENDGRID_FROM_NAME=Booking Platform

# AWS SES (alternativa)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your_aws_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SES_FROM_EMAIL=noreply@yourbookingplatform.com

# =====================================================
# Application Settings
# =====================================================

NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# =====================================================
# Service Discovery (Internal Communication)
# =====================================================

# Auth Service
AUTH_SERVICE_URL=http://localhost:3001

# User Service
USER_SERVICE_URL=http://localhost:3002

# Property Management Service
PROPERTY_SERVICE_URL=http://localhost:3003

# Payment Service
PAYMENT_SERVICE_URL=http://localhost:3004

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Search Service
SEARCH_SERVICE_URL=http://localhost:3006

# =====================================================
# Internal Service Authentication
# =====================================================

INTERNAL_SERVICE_TOKEN=super-secret-service-to-service-token-change-me

# =====================================================
# File Upload (Property Management - Listing Photos)
# =====================================================

# Local Storage (MVP)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# AWS S3 (Production)
AWS_S3_BUCKET=your-booking-platform-uploads
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your_aws_access_key
AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_CLOUDFRONT_URL=https://your-cloudfront-distribution.cloudfront.net

# =====================================================
# Monitoring & Observability (Futuro)
# =====================================================

# Jaeger (Distributed Tracing)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Prometheus (Metrics)
PROMETHEUS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
