{
  "name": "booking-management-system",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "test:debug": "turbo run test:debug",
    "test:watch": "turbo run test:watch",
    "format": "biome format --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "biome:check": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@caioms/pre-git-auto-format": "latest",
    "turbo": "^2.8.10",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
