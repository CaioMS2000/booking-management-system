{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["es2023"],
        "module": "ESNext",
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "types": ["vitest/globals", "node"],
        "moduleResolution": "Bundler"
    },
    "include": ["src/**/*"]
}